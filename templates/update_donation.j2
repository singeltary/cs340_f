    <title>Update Donation</title>
</head>

<body>
    <ul>
        <li><a href="/donors">Donors</a></li>
        <li><a href="/donations">Donations</a></li>
        <li><a href="/bloodstock">Bloodstock</a></li>
        <li><a href="/recipients">Recipients</a></li>
        <li><a href="/transfers">Transfers</a></li>
    </ul>
    <h1>Update Donation</h1>
    <form method="POST" action="/update_donation/{{donation[0]['donationID']}}">
        <label for="donorId">Donor ID:</label>
        <input type="text" id="donorId" name="donorId" required value="{{donation[0]['donorID']}}"><br>

        <label for="donationDate">Donation Date:</label>
        <input type="text" id="donationDate" name="donationDate" required value="{{donation[0]['date']}}"><br>

        <label for="bloodType">Blood Type:</label>
        <input type="text" id="bloodType" name="bloodType" required value="{{donation[0]['bloodType']}}"><br>

        <label for="quantity">Quantity:</label>
        <input type="text" id="quantity" name="quantity" required value="{{donation[0]['quantity']}}"><br>
		
		<button type="submit">Update Donation</button>
    </form>
</body>
